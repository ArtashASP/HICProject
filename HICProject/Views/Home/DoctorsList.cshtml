@model IEnumerable<WebApplication1.Models.Staff>
@inject SignInManager<ApplicationUser> signInManager;

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
        <link href="~/css/style.css" rel="stylesheet" />
    </head>
    <body>
        @if (Model == null)
        {
            <div class="spinner"></div>
        }
        else
        {
            <div class="card-deck">
                @foreach (var doctor in Model)
                {
                    <div class="card m-3 container" style="min-width:18rem; max-width: 10.3%;">
                        <div class="card-header">
                            <h3>@doctor.FirstName @doctor.LastName (@doctor.Qualifications)</h3>
                        </div>
                        <div class="card-footer text-center">
                            <a class="btn btn-primary m-1" asp-action="Addappointment" asp-controller="home" asp-route-id="@doctor.Id">Add an appointment</a>
                        </div>
                    </div>
                }
            </div>
        }
    </body>
    </html>
