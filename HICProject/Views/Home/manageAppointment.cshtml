@model IEnumerable<Appointment>

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <title>Schedule Template</title>
</head>
<body>
    <div class="row">
        <div class="col-md-6 bg-primary">

            @foreach (var a in Model)
            {
                <ul class="list-group ">
                    <li class="list-group-item">Id: @a.Id </li>
                    <li class="list-group-item">Description: @a.Description</li>
                    <li class="list-group-item">Priority: @a.Priority</li>
                    <li class="list-group-item">
                        <select id="sel1">
                            <option value=@a.Status>@a.Status</option>
                            <option value="Pending">Pending</option>
                            <option value="Booked">Booked</option>
                            <option value="Arrived">Arrived</option>
                            <option value="Fulfilled">Fulfilled</option>
                            <option value="Cancelled">Cancelled</option>
                            <option value="Checked-in">Checked-in</option>
                            <option value="Waitlist">Waitlist</option>
                        </select>
                    </li>
                    <li class="list-group-item">Start: @a.Start</li>
                    <li class="list-group-item">End: @a.End</li>
                    <li class="list-group-item">
                        <a style="width:auto" asp-controller="Home" asp-action="start" class="btn btn-primary">Save changes</a>
                    </li>
                </ul>
                <input type="hidden" value=@a.patientId id="inp1" />
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
</body>
</html>