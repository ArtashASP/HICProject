@model WebApplication1.Models.HIC.Medication

@{
    ViewData["Title"] = "AddMedication";
}
    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    </head>
    <body>
        <h4>Medication</h4>
        <br />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddMedication">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="medication_type_code" class="control-label">Medication type code</label>
                        <input asp-for="medication_type_code" class="form-control" />
                        <span asp-validation-for="medication_type_code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="medication_unit_code" class="control-label">Medication unit code</label>
                        <input asp-for="medication_unit_code" class="form-control" />
                        <span asp-validation-for="medication_unit_code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="medication_name" class="control-label">Mdeication name</label>
                        <input asp-for="medication_name" class="form-control" />
                        <span asp-validation-for="medication_name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="medication_description" class="control-label">Medication description</label>
                        <input asp-for="medication_description" class="form-control" />
                        <span asp-validation-for="medication_description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>



        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </body>
    </html>
<h1>AddMedication</h1>


